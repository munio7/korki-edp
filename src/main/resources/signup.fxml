<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="698.0" prefWidth="1035.0" style="-fx-background-color: linear-gradient(to bottom right, #3b5998, #192f6a);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.korkiedp.controller.RegisterControler">
   <HBox alignment="CENTER" StackPane.alignment="CENTER">
      <children>
      
         <VBox alignment="CENTER" maxHeight="-Infinity" spacing="10.0" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10;" HBox.hgrow="NEVER">

            <Button maxWidth="200" onAction="#handleBackToWelcome" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Powrót" />

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Rejestracja korepetytora" />
      
            <TextField fx:id="fullNameField" maxWidth="300" promptText="Imię i nazwisko" />
      
            <TextField fx:id="emailField" maxWidth="300" promptText="Email" />
      
            <TextField fx:id="usernameField" maxWidth="300" promptText="Login" />
      
            <PasswordField fx:id="passwordField" maxWidth="300" promptText="Hasło" />
      
            <PasswordField fx:id="confirmPasswordField" maxWidth="300" promptText="Powtórz hasło" />
      
            <Label fx:id="errorLabel" maxWidth="280" style="-fx-font-size: 12px;" text="" textFill="red" wrapText="true" />
            <Label fx:id="successLabel" maxWidth="280" style="-fx-font-size: 12px;" text="" textFill="green" wrapText="true" />
      
            <Button fx:id="registerButton" maxWidth="150" onAction="#handleRegisterButtonClick" style="-fx-background-color: #3b5998; -fx-text-fill: white; -fx-background-radius: 5;" text="Zarejestruj" />
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </VBox>
      </children>
      <StackPane.margin>
         <Insets />
      </StackPane.margin>
   </HBox>
</StackPane>
