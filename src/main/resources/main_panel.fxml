<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.korkiedp.controller.MainPanelController">

    <!-- Left: Navigation Menu -->
    <left>
        <VBox fx:id="navBar" spacing="10" alignment="TOP_CENTER" prefWidth="200" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label fx:id="welcomeLabel" style="-fx-wrap-text: true;  -fx-text-fill: white; -fx-font-size: 18;" />
            <Button text="Students" prefWidth="150" onAction="#showStudentsView"/>
            <Button text="Calendar" prefWidth="150" onAction="#showCalendarView"/>
            <Button text="Payments" prefWidth="150" onAction="#showPaymentsView"/>
            <Button text="Settings" prefWidth="150" onAction="#showSettingsView"/>
            <Button text="Wyloguj"  prefWidth="150" onAction="#logout"/>
        </VBox>
    </left>

    <!-- Center: Main View Area -->
    <center>
        <StackPane fx:id="mainContent" style="-fx-background-color: #ecf0f1;" />
    </center>

</BorderPane>