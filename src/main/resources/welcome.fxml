<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="400" prefWidth="600" style="-fx-background-color: linear-gradient(to bottom right, #3b5998, #192f6a);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.korkiedp.controller.WelcomeController">
    <HBox alignment="CENTER" StackPane.alignment="CENTER">
        <VBox alignment="CENTER" maxHeight="-Infinity" spacing="20" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 10;" StackPane.alignment="CENTER">

            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Witaj w Korki" />

            <Button fx:id="loginButton" maxWidth="200" onAction="#handleLogin" style="-fx-background-color: #3b5998; -fx-text-fill: white; -fx-background-radius: 5;" text="Zaloguj się" />

            <Button fx:id="registerButton" maxWidth="200" onAction="#handleRegister" style="-fx-background-color: #6a89cc; -fx-text-fill: white; -fx-background-radius: 5;" text="Zarejestruj się" />
        </VBox>
    </HBox>
</StackPane>
